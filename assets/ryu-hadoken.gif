    <rect x="130" y="78" width="2" height="2" fill="#8df7ff"/>
    <rect x="140" y="82" width="2" height="2" fill="#5fe7ff"/>
    <animate attributeName="opacity" from="1" to="0" begin="0.1s" dur="1.6s" fill="freeze" />
  </g>

  <!-- --- Texto que aparece apÃ³s o Hadoken atravessar --- -->
  <g id="label" opacity="0">
    <text x="300" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" fill="#ffffff">
      Hello! I'm Lucas Sukar ðŸ‘‹
    </text>
    <animateTransform attributeName="transform" type="translate" from="0 6" to="0 0" begin="2s" dur="0.6s" fill="freeze" />
    <animate attributeName="opacity" from="0" to="1" begin="2s" dur="0.6s" fill="freeze" />
  </g>

  <!-- efeito "impact" no final (uma pequena expansÃ£o) -->
  <g id="impact" transform="translate(460,85)" opacity="0">
    <circle cx="0" cy="0" r="4" fill="#7ef7ff" />
    <animate attributeName="opacity" from="0.9" to="0" begin="1.9s" dur="0.6s" fill="freeze"/>
    <animate attributeName="r" from="4" to="22" begin="1.9s" dur="0.6s" fill="freeze"/>
  </g>

  <!-- crÃ©ditos invisÃ­veis (meta) -->
