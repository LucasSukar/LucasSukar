<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg"
     width="800" height="200" viewBox="0 0 400 150"
     role="img" aria-label="Ryu Hadoken (pixel art)">
  <!-- fundo transparente -->
  <rect width="100%" height="100%" fill="none"/>

  <!-- --- RYU PIXEL ART (simples, feito com retÃ¢ngulos) --- -->
  <!-- CabeÃ§a -->
  <rect x="30" y="50" width="18" height="18" fill="#f1c27d"/>
  <rect x="30" y="48" width="18" height="2" fill="#BBB"/> <!-- headband -->
  <!-- Cabelo -->
  <rect x="26" y="50" width="6" height="6" fill="#111"/>
  <rect x="48" y="50" width="6" height="6" fill="#111"/>
  <!-- Corpo (gi) -->
  <rect x="26" y="70" width="36" height="24" fill="#fff"/>
  <rect x="26" y="92" width="36" height="8" fill="#ddd"/> <!-- belt area -->
  <rect x="40" y="92" width="6" height="8" fill="#000"/> <!-- belt -->
  <!-- Arms (one punching forward) -->
  <rect x="8" y="74" width="18" height="6" fill="#f1c27d"/> <!-- left arm (back) -->
  <rect x="60" y="74" width="22" height="6" fill="#f1c27d"/> <!-- right arm (forward) -->
  <rect x="80" y="74" width="6" height="6" fill="#fff"/> <!-- sleeve -->

  <!-- Legs -->
  <rect x="30" y="100" width="12" height="22" fill="#333"/>
  <rect x="44" y="100" width="12" height="22" fill="#333"/>

  <!-- Pequenos detalhes para parecer "pixelado" -->
  <rect x="34" y="60" width="2" height="2" fill="#000"/>
  <rect x="42" y="60" width="2" height="2" fill="#000"/>

  <!-- --- HADOKEN (bola de fogo) --- -->
  <!-- desenhada inicialmente perto de Ryu -->
  <circle id="hadoken" cx="96" cy="83" r="8" fill="#50e3ff" opacity="1">
    <!-- anima o centro X da bola; id para referÃªncia -->
    <animate id="hadokenAnim" attributeName="cx" from="96" to="360"
             dur="1.8s" begin="0.5s" fill="freeze" />
    <!-- pulse (ligeiro aumento de raio enquanto se move) -->
    <animate attributeName="r" from="6" to="10" dur="0.4s" begin="0.5s" repeatCount="1" fill="freeze"/>
  </circle>

  <!-- brilho dentro do hadoken -->
  <circle cx="100" cy="79" r="3" fill="#ffffff" opacity="0.9">
    <animate attributeName="cx" from="100" to="360" dur="1.8s" begin="0.5s" fill="freeze" />
  </circle>

  <!-- um rastro sutil (retÃ¢ngulos pixelados deslocando) -->
  <g id="rastro">
    <rect x="86" y="80" width="6" height="4" fill="#6fe9ff" opacity="0.35">
      <animate attributeName="x" from="86" to="340" dur="1.8s" begin="0.5s" fill="freeze"/>
    </rect>
    <rect x="78" y="82" width="5" height="3" fill="#7ef0ff" opacity="0.25">
      <animate attributeName="x" from="78" to="328" dur="1.8s" begin="0.5s" fill="freeze"/>
    </rect>
  </g>

  <!-- --- TEXTO QUE SURGE APÃ“S O HADOKEN (fading in) --- -->
  <text id="welcomeText" x="200" y="40" text-anchor="middle"
        font-family="sans-serif" font-size="20" fill="#ffffff" opacity="0">
    Hello! I'm Lucas Sukar ðŸ‘‹
    <!-- faz o fade-in quando a animaÃ§Ã£o do hadoken terminar -->
    <animate attributeName="opacity" from="0" to="1" dur="0.9s"
             begin="hadokenAnim.end" fill="freeze"/>
    <!-- leve movimento para cima (opcional, remove se quiser estÃ¡tico) -->
    <animate attributeName="y" from="46" to="40" dur="0.9s"
             begin="hadokenAnim.end" fill="freeze"/>
  </text>

  <!-- --- Acessibilidade: descriÃ§Ã£o (nÃ£o visÃ­vel) --- -->
  <desc>Pixel-art do Ryu lanÃ§ando um Hadoken; quando a bola passa o texto "Hello! I'm Lucas Sukar" aparece.</desc>
</svg>
