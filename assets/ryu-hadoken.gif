  </g>

  <!-- --- Hadoken (bola com efeito pixel/gradiente) --- -->
  <g id="hadoken" >
    <!-- criar vÃ¡rios pequenos rects formando um "pixel" bola para o estilo pixelado -->
    <g id="fire" transform="translate(110,85)">
      <!-- camada 1 central (branco) -->
      <rect x="-6" y="-6" width="4" height="4" fill="#fff"/>
      <rect x="-2" y="-6" width="4" height="4" fill="#00f0ff"/>
      <rect x="2" y="-6" width="4" height="4" fill="#00f0ff"/>
      <rect x="-6" y="-2" width="4" height="4" fill="#00c8ff"/>
      <rect x="-2" y="-2" width="4" height="4" fill="#00a8ff"/>
      <rect x="2" y="-2" width="4" height="4" fill="#0088ff"/>
      <rect x="-6" y="2" width="4" height="4" fill="#0068ff"/>
      <rect x="-2" y="2" width="4" height="4" fill="#0048ff"/>
      <rect x="2" y="2" width="4" height="4" fill="#0028ff"/>
    </g>
  </g>

  <!-- --- animaÃ§Ã£o: vamos animar o grupo "fire" movendo em x da posiÃ§Ã£o inicial atÃ© a direita --- -->
  <animateTransform
    xlink:href="#fire"
    attributeName="transform"
    type="translate"
    from="110 85"
    to="460 85"
    begin="0s"
    dur="2s"
    fill="freeze"
    repeatCount="1" />

  <!-- pequena trilha de faÃ­scas (opcional) - aparece e desaparece rapidamente -->
  <g id="sparks" opacity="0">
