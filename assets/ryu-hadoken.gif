  <rect width="100%" height="100%" fill="#0b0f13" />

  <!-- --- Pixel Ryu (simples pixel-art feito com retÃ¢ngulos) --- -->
  <g id="ryu" transform="translate(30,20)">
    <!-- corpo e roupa (vÃ¡rias 'pixels' como rects) -->
    <!-- cabeÃ§a -->
    <rect x="10" y="8" width="6" height="6" fill="#f3d7b0"/>
    <rect x="16" y="8" width="6" height="6" fill="#f3d7b0"/>
    <rect x="10" y="14" width="12" height="2" fill="#f3d7b0"/>
    <!-- cabelo -->
    <rect x="8" y="6" width="4" height="2" fill="#111"/>
    <rect x="26" y="6" width="4" height="2" fill="#111"/>
    <rect x="6" y="8" width="4" height="2" fill="#111"/>
